{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "target": "ESNext",
    "sourceMap": false,
    "inlineSources": false,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
  },
  "include": ["vite.config.ts", "src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
