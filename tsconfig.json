{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "ignoreDeprecations": "5.0",
        "target": "es2022",
        "sourceMap": false,
        "inlineSources": false,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "rootDir": "src",
    "include": ["src/**/*.ts", "node_modules/@types"],
    "exclude": ["build/*"],
}
