{
  "$schema": "https://json.schemastore.org/prettierrc",
  "plugins": ["prettier-plugin-svelte"],
  "overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }],
  "tabWidth": 4,
  "singleQuote": false,
  "printWidth": 100,
  "trailingComma": "all",
  "singleAttributePerLine": true,
  "quoteProps": "as-needed",
  "experimentalTernaries": false
}